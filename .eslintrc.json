{
    "env": {
        "browser": true,
        "amd": true,
        "node": true
    
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:prettier/recommended"
       
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },  
    "rules": {
        "react/jsx-max-props-per-line": [
            2,
            {
                "maximum": 1,
                "when": "'multiline'"
            }
        ],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "react/no-unescaped-entities": "off",
        "no-undef": "off",
        "prettier/prettier":[
            "error",
            {},
            {
                "usePrettierrc": true
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}